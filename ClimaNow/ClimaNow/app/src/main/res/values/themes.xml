<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Tema base do aplicativo (escuro) -->
    <style name="Theme.ClimaNow" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Cores primárias -->
        <item name="colorPrimary">@color/dark_primary</item>
        <item name="colorPrimaryVariant">@color/dark_background</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Cor da barra de status -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>

        <!-- Cor de fundo padrão das telas -->
        <item name="android:windowBackground">@color/dark_background</item>
        <!-- Cor padrão do texto -->
        <item name="android:textColor">@color/white</item>

        <!-- Adicionado para cor do texto do menu pop-up -->
        <item name="android:actionMenuTextColor">#000000</item>
        <item name="android:textColorPrimary">#000000</item>
    </style>
</resources>